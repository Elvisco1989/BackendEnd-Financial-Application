@page
@model COPVETFinances.Pages.FamilyDay.AddExpenditureModel
@{
}
<form method="post">
    <div class="form-group">

        <input asp-for="familyDay.Id" class="form-control" type="hidden" />

    </div>

    <div class="form-group">
        <label asp-for="familyDay.Name"></label>
        <input asp-for="familyDay.Name" class="form-control" />
        <span asp-validation-for="familyDay.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="familyDay.Description"></label>
        <input asp-for="familyDay.Description" class="form-control" />
        <span asp-validation-for="familyDay.Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="familyDay.Amount"></label>
        <input asp-for="familyDay.Amount" class="form-control" />
        <span asp-validation-for="familyDay.Amount" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="familyDay.Date"></label>
        <input asp-for="familyDay.Date" class="form-control" />
        <span asp-validation-for="familyDay.Date" class="text-danger"></span>
    </div>

    <input type="submit" value="New Expenditure" class="btn btn-primary" />
</form>
