@page
@model COPVETFinances.Pages.FamilyDay.ShowExModel
@{
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2> Community Open Day Expenses</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="/FamilyDay/AddExpenditure" class="btn btn-primary">New Expenditure</a>
        </div>
    </div>
</div>
<table class="table table-bordered table table-striped" style="width:100%">
    <thead>
        <tr>
            <th>Date </th>

            <th>Name</th>
            <th>Description </th>
            <th>Amount</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.families != null)
        {
            @foreach (var item in Model.families)
            {
                <tr>
                    <td width="30%"> @item.Id</td>
                    <td width="50%"> @item.Name </td>
                    <td width="30%"> @item.Description</td>
                    <td width="30%"> @item.Amount</td>

                    <td>
                        <a asp-page="/FamilyDay/Delete" asp-route-sid="@item.Id" class="btn btn-danger m-1">Delete </a>
                    </td>
                    @* <td>
            <a asp-page="/Leaders/OpdatereLeder" asp-route-sid="@item.Id" class="btn btn-primary m-1">Opdater </a>
            </td>*@
                </tr>
            }
        }
</table>
