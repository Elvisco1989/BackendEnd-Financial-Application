@page
@model COPVETFinances.Pages.Financial_Statement.FinancialStatementModel
@{
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-12">
            <h1 style="color: blue;">Financial Statement for Copenhagen Veteran (Period November 24, 2023 to February 1, 2024)</h1>



            <h2>  Incomes</h2>
        </div>
       @* <div class="col-6 text-end">
            <a asp-page="/Incomes/NewIncome" class="btn btn-primary">New Income</a>
        </div>*@
    </div>
</div>
<table class="table table-bordered table table-striped" style="width:100%">
    <thead>
        <tr>
            <th>Date </th>
            <th>Name</th>
            <th>Description </th>

            <th>Amount</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Incomes != null)
        {
            @foreach (var item in Model.Incomes)
            {
                <tr>
                    <td width="30%"> @item.Date</td>
                    <td width="50%"> @item.Name </td>
                    <td width="30%"> @item.Description</td>
                    <td width="30%"> @item.Amount</td>

                   @* <td>
                        <a asp-page="/Incomes/DeleteIncome" asp-route-sid="@item.Id" class="btn btn-danger m-1">Slet </a>
                    </td>
                    <td>
                        <a asp-page="/Leaders/OpdatereLeder" asp-route-sid="@item.Id" class="btn btn-primary m-1">Opdater </a>
                    </td>*@
                </tr>
               
            }
            <tr>
                <td colspan="3">
                    <!-- colspan to span across all columns -->
                    <h4><strong>Registration</strong></h4>
                </td>
                <td width="30%">@Model.Registration</td>


            </tr>
            <tr>
                <td colspan="3">
                    <!-- colspan to span across all columns -->
                    <h4><strong>Total Income</strong></h4>
                </td>
               @* <td width="30%">@Model.totalIncome</td>*@
                <td width="30%" class="green-text">@Model.totalIncome</td>


            </tr>
        }
</table>


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2>  Expenditures</h2>
        </div>
       @* <div class="col-6 text-end">
            <a asp-page="/Expenses/NewExpenditure" class="btn btn-primary">New Expenditure</a>
        </div>*@
    </div>
</div>
<table class="table table-bordered table table-striped" style="width:100%">
    <thead>
        <tr>
            <th>Date </th>

            <th>Name</th>
            <th>Description </th>
            <th>Amount</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Expenditure != null)
        {
            @foreach (var item in Model.Expenditure)
            {
                <tr>
                    <td width="30%"> @item.Date</td>
                    <td width="50%"> @item.Name </td>
                    <td width="30%"> @item.Description</td>
                    <td width="30%"> @item.Amount</td>

                  
                </tr>
                 

           
            }
                <tr>
                        <td colspan="3">
                            <!-- colspan to span across all columns -->
                            <h4><strong>Total Expenditure</strong></h4>
                        </td>
                        <td width="30%" style="color:darkred">@Model.totalExpenditure</td>


                    </tr>

                         <tr>
                            <td colspan="3">
                                <!-- colspan to span across all columns -->
                                <h4><strong>Balance in the Account</strong></h4>
                            </td>
                            <td width="30%" style="color:blue">@Model.Balance</td>


                        </tr>
        }
</table>
