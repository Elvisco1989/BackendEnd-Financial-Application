@page
@model COPVETFinances.Pages.Members.ShowAllMemberModel
@{
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2> Members </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="/Members/AddNewMember" class="btn btn-primary">New Member</a>
        </div>
    </div>
</div>
<table class="table table-bordered table table-striped" style="width:100%">
    <thead>
        <tr>
           @* <th>Date </th>*@
            <th>Name</th>
            <th>Payment Method</th>
  
            <th>Amount</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.players != null)
        {
            @foreach (var item in Model.players)
            {
                <tr>
                    <td width="30%"> @item.Name</td>
                    <td width="50%"> @item.Method </td>
                    <td width="30%"> @item.Registration</td>
                    

                    <td>
                        <a asp-page="/Members/DeleteMember" asp-route-sid="@item.Id" class="btn btn-danger m-1">Slet </a>
                    </td>
                   @* <td>
                        <a asp-page="/Leaders/OpdatereLeder" asp-route-sid="@item.Id" class="btn btn-primary m-1">Opdater </a>
                    </td>*@
                </tr>
            }
        }
</table>

