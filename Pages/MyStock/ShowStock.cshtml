@page
@model COPVETFinances.Pages.MyStock.ShowStockModel
@{
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2> Items in Stock </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="/MyStock/AddStock" class="btn btn-primary">New Stock</a>
        </div>
    </div>
</div>
<table class="table table-bordered table table-striped" style="width:100%">
    <thead>
        <tr>
            @* <th>Date </th>*@
            <th>Category</th>
            <th>Location</th>
            <th>Date</th>

            <th>Amount in Stock</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Stocks != null)
        {
            @foreach (var item in Model.Stocks)
            {
                <tr>
                    <td width="30%"> @item.Category</td>
                    <td width="50%"> @item.Location </td>
                    <td width="50%"> @item.recieve </td>
                    <td width="30%"> @item.AmountInStock</td>


                    <td>
                        <a asp-page="/Members/DeleteMember" asp-route-sid="@item.Id" class="btn btn-danger m-1">Slet </a>
                    </td>
                    @* <td>
            <a asp-page="/Leaders/OpdatereLeder" asp-route-sid="@item.Id" class="btn btn-primary m-1">Opdater </a>
            </td>*@
                </tr>
            }
        }
</table>