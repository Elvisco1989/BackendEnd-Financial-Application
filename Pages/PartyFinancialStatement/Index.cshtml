@page
@model COPVETFinances.Pages.PartyFinancialStatement.IndexModel
@{
    ViewData["Title"] = "Party Financial Statement";
}

<style>
    body, html {
        height: 100%;
        margin: 0;
        display: flex;
        flex-direction: column;
    }

    .logo-container {
        flex: 1;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .image-section {
        text-align: center;
    }

        .image-section img {
            max-width: 50%; /* Adjust this value as needed */
            max-height: 50%; /* Adjust this value as needed */
        }

    .blue-text {
        color: blue;
    }

    .green-text {
        color: green;
    }

    /* Other styles remain the same */
</style>

<div class="logo-container">
    <div class="image-section">
        <img src="~/css/VetLogo.jpeg" alt="Descriptive Alt Text">
    </div>
</div>

<!-- Rest of your page content follows -->
@*<div class="image-section">
    <img src="~/css/VetLogo.jpeg" alt="Descriptive Alt Text">
</div>*@
<style>
    #Container {
        display: flex;
        flex-direction: column;
    }

        #Container > div {
            width: 100%;
            text-align: left;
        }

            #Container > div:nth-child(2) {
                text-align: right;
                margin-top: auto; /* This pushes the Treasurer to the bottom */
            }

            #Container > div:last-child {
                text-align: center;
            }
</style>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-12">
            <h1 style="color: blue;">Party Financial Statement for Copenhagen Veteran (August 3, 2024)</h1>
            <h2>Party Incomes</h2>
        </div>
    </div>
</div>
<table class="table table-bordered table table-striped" style="width:100%">
    <thead>
        <tr>
            <th>Date</th>
            <th>Name</th>
            <th>Description</th>
            <th>Amount</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Incomes != null)
        {
            @foreach (var item in Model.Incomes)
            {
                <tr>
                    <td width="30%">@item.Date</td>
                    <td width="50%">@item.Name</td>
                    <td width="30%">@item.Description</td>
                    <td width="30%">@item.Amount</td>
                </tr>
            }
            <tr>
                <td colspan="3">
                    <!-- colspan to span across all columns -->
                    <h4><strong>Total Income</strong></h4>
                </td>
                <td width="30%" class="blue-text">@Model.TotalPartyIncome</td>
            </tr>
        }
</table>

<div class="container p-3">
